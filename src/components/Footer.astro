---
const currentYear = new Date().getFullYear();

const mainLinks = [
  { href: "/", title: "Accueil" },
  { href: "/club", title: "Le Club" },
  { href: "/contact", title: "Contact" },
];

const legalLinks = [
  { href: "/politique-de-confidentialite", title: "Politique de Confidentialité" },
];
---

<footer class="site-footer">
  <div class="container footer-grid">
    <div class="footer-brand">
      <img src="/logo.png" alt="Club COLAK" class="footer-logo" />
      <p class="footer-tagline">
        Discipline. Cadre. Exigence.<br/>
        La boxe anglaise à La Louvière.
      </p>
    </div>

    <div class="footer-nav">
      <h4>Navigation</h4>
      <ul>
        {mainLinks.map(link => (
          <li><a href={link.href}>{link.title}</a></li>
        ))}
      </ul>
    </div>

    <div class="footer-nav">
      <h4>Légal</h4>
      <ul>
        {legalLinks.map(link => (
          <li><a href={link.href}>{link.title}</a></li>
        ))}
      </ul>
    </div>

    <div class="footer-contact">
      <h4>Contact</h4>
      <p>Rue de l'Olive 13A,<br/>7100 La Louvière</p>
      <a href="tel:+32487118877" class="footer-link">0487 11 88 77</a>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container bottom-wrapper">
      <p>© {currentYear} BOXING CLUB COLAK — TOUS DROITS RÉSERVÉS.</p>
      <p class="designer-credit">
        Site créé par <a href="https://www.instagram.com/aa.webdesign/" target="_blank" rel="noopener">A&A web design</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: #000;
    padding: 80px 0 0 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 40px;
    padding-bottom: 60px;
  }

  .footer-logo { 
    height: 45px; 
    margin-bottom: 25px; 
    filter: brightness(1);
  }

  .footer-tagline { 
    color: #666; 
    font-size: 0.95rem; 
    line-height: 1.7; 
    max-width: 260px; 
  }

  .site-footer h4 {
    color: var(--color-accent);
    font-family: var(--font-accent);
    font-size: 1.1rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 25px;
  }

  .site-footer ul { 
    list-style: none; 
    padding: 0; 
  }

  .site-footer ul li { 
    margin-bottom: 12px; 
  }

  .site-footer a { 
    color: #888; 
    transition: 0.3s; 
    font-size: 0.9rem; 
    text-decoration: none;
  }

  .site-footer a:hover { 
    color: var(--color-accent); 
  }

  .footer-contact p { 
    color: #888; 
    line-height: 1.6; 
    margin-bottom: 15px; 
    font-size: 0.9rem; 
  }

  .footer-link { 
    font-weight: 700; 
    color: #fff !important; 
    font-size: 1rem !important;
  }

  /* BARRE DU BAS */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.03);
    padding: 30px 0;
    color: #444;
    font-size: 0.75rem;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .bottom-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .designer-credit a {
    color: #666;
    font-weight: 700;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: 0.3s;
  }

  .designer-credit a:hover {
    color: var(--color-accent);
  }

  /* RESPONSIVE */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 60px 40px;
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 50px;
    }

    .footer-tagline {
      margin: 0 auto;
    }

    .bottom-wrapper {
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }
  }
</style>