---
const currentYear = new Date().getFullYear();

const mainLinks = [
  { href: "/", title: "Accueil" },
  { href: "/club", title: "Le Club" },
  { href: "/contact", title: "Contact" },
];

const legalLinks = [
  { href: "/politique-de-confidentialite", title: "Confidentialité" },
];
---

<footer class="site-footer">
  <div class="container footer-grid">
    
    <div class="footer-brand">
      <img src="/logo.png" alt="Club COLAK" class="footer-logo" />
      <p class="footer-tagline">
        Discipline. Cadre. Exigence.<br/>
        La boxe anglaise à La Louvière.
      </p>
    </div>

    <div class="footer-links-group">
      <div class="footer-nav">
        <h4>Menu</h4>
        <ul>
          {mainLinks.map(link => (
            <li><a href={link.href}>{link.title}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-nav">
        <h4>Légal</h4>
        <ul>
          {legalLinks.map(link => (
            <li><a href={link.href}>{link.title}</a></li>
          ))}
        </ul>
      </div>
    </div>

    <div class="footer-contact">
      <h4>Contact</h4>
      <p>Rue de l'Olive 13A, 7100 La Louvière</p>
      <a href="tel:+32487118877" class="footer-link">0487 11 88 77</a>
    </div>

  </div>

  <div class="footer-bottom">
    <div class="container bottom-wrapper">
      <p>© {currentYear} BOXING CLUB COLAK</p>
      <p class="designer-credit">
        Site par <a href="https://www.instagram.com/aa.webdesign/" target="_blank" rel="noopener">A&A web design</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: #000;
    padding: 80px 0 0 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 2fr 1fr;
    gap: 40px;
    padding-bottom: 60px;
  }

  .footer-logo { height: 40px; margin-bottom: 20px; }
  .footer-tagline { color: #555; font-size: 0.9rem; line-height: 1.6; max-width: 240px; }

  .site-footer h4 {
    color: var(--color-accent);
    font-family: var(--font-accent);
    font-size: 1rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 20px;
  }

  .footer-links-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .site-footer ul { list-style: none; padding: 0; }
  .site-footer ul li { margin-bottom: 10px; }
  .site-footer a { color: #888; transition: 0.3s; font-size: 0.9rem; text-decoration: none; }
  .site-footer a:hover { color: #fff; }

  .footer-contact p { color: #888; font-size: 0.9rem; margin-bottom: 10px; }
  .footer-link { font-weight: 700; color: #fff !important; font-size: 1rem !important; }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.03);
    padding: 25px 0;
    color: #333;
    font-size: 0.7rem;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .bottom-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .designer-credit a { color: #444; text-decoration: underline; transition: 0.3s; }
  .designer-credit a:hover { color: var(--color-accent); }

  /* RESPONSIVE OPTIMISÉ */
  @media (max-width: 992px) {
    .footer-grid { grid-template-columns: 1fr 1fr; gap: 60px 40px; }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr; /* On garde une colonne mais on change l'alignement */
      text-align: left; /* Alignement à gauche pour un look plus éditorial */
      gap: 40px;
    }

    .footer-links-group {
      grid-template-columns: 1fr 1fr; /* C'est ici qu'on évite la pyramide ! */
      border-top: 1px solid rgba(255,255,255,0.05);
      border-bottom: 1px solid rgba(255,255,255,0.05);
      padding: 30px 0;
    }

    .footer-brand, .footer-contact {
      text-align: left;
    }

    .footer-tagline { max-width: 100%; }

    .bottom-wrapper {
      flex-direction: row; /* On garde sur une ligne si possible pour le chic */
      font-size: 0.65rem;
    }
  }
</style>