---
const currentYear = new Date().getFullYear();

const mainLinks = [
  { href: "/", title: "Accueil" },
  { href: "/club", title: "Le Club" },
  { href: "/contact", title: "Contact" },
];

const legalLinks = [
  { href: "/politique-de-confidentialite", title: "Confidentialité" },
];
---

<footer class="site-footer">
  <div class="container footer-main">
    
    <div class="footer-brand">
      <img src="/logo.png" alt="Club COLAK" class="footer-logo" />
      <div class="footer-motto">
        <p class="motto-main">Discipline. Cadre. Exigence.</p>
        <p class="motto-sub">La boxe anglaise à La Louvière.</p>
      </div>
    </div>

    <div class="footer-links">
      <div class="link-group">
        <h4>Menu</h4>
        <ul>
          {mainLinks.map(link => (
            <li><a href={link.href}>{link.title}</a></li>
          ))}
        </ul>
      </div>

      <div class="link-group">
        <h4>Légal</h4>
        <ul>
          {legalLinks.map(link => (
            <li><a href={link.href}>{link.title}</a></li>
          ))}
        </ul>
      </div>
    </div>

  </div>

  <div class="footer-bottom">
    <div class="container bottom-wrapper">
      <p class="copyright">© {currentYear} BOXING CLUB COLAK</p>
      <p class="designer-credit">
        site créer par <a href="https://www.instagram.com/aa.webdesign/" target="_blank" rel="noopener">A&A web design</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: #000;
    padding: 100px 0 0 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* CONFIGURATION DE LA GRILLE PRINCIPALE */
  .footer-main {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-bottom: 80px;
    gap: 60px;
  }

  /* BRANDING */
  .footer-logo { 
    height: 50px; 
    margin-bottom: 25px; 
    display: block;
  }
  .motto-main {
    color: var(--color-accent);
    font-family: var(--font-accent);
    font-size: 1.2rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 5px;
  }
  .motto-sub {
    color: #444;
    font-size: 0.9rem;
  }

  /* GROUPES DE LIENS */
  .footer-links {
    display: flex;
    gap: 100px;
  }
  .link-group h4 {
    color: #fff;
    font-family: var(--font-accent);
    font-size: 0.9rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: 25px;
    opacity: 0.4;
  }
  .link-group ul { list-style: none; padding: 0; }
  .link-group li { margin-bottom: 12px; }
  .link-group a {
    color: #888;
    text-decoration: none;
    font-size: 0.95rem;
    transition: 0.3s;
  }
  .link-group a:hover { color: var(--color-accent); }

  /* BARRE INFÉRIEURE */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.03);
    padding: 30px 0;
  }
  .bottom-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #222;
    font-size: 0.7rem;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
  .designer-credit a {
    color: #444;
    text-decoration: none;
    font-weight: 700;
    border-bottom: 1px solid transparent;
    transition: 0.3s;
  }
  .designer-credit a:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  /* RESPONSIVE MOBILE */
  @media (max-width: 768px) {
    .footer-main {
      flex-direction: column;
      align-items: flex-start;
      gap: 50px;
      padding-bottom: 60px;
    }

    .footer-links {
      width: 100%;
      gap: 0;
      justify-content: space-between;
      border-top: 1px solid rgba(255, 255, 255, 0.05);
      padding-top: 40px;
    }

    .bottom-wrapper {
      flex-direction: column;
      gap: 15px;
      text-align: left;
      align-items: flex-start;
    }
  }
</style>