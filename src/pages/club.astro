    categorie: "Super flyweight",
    palmares: "à venir",
    image: "/yesna.jpeg"
  }
];

// Données des Boxeurs Amateurs
const boxeursAmateurs = [
  { nom: "Joël Adingara", categorie: "Amateur", image: "" },
  { nom: "Jordan Midongs", categorie: "Amateur", image: "/jojo.jpeg" },
  { nom: "Kelson Impérial", categorie: "Amateur", image: "/kelson.jpeg" },
  { nom: "Randy Konde", categorie: "Amateur", image: "/randy.jpeg" },
  { nom: "Murat Kulaksiz", categorie: "Amateur", image: "/murat.jpeg" },
  { nom: "Anselme Kabala", categorie: "Amateur", image: "/ace.jpeg" },
  { nom: "Aïssa Benmaamar", categorie: "Amateur", image: "/aisa.jpeg" },
  { nom: "Yoan Kamkom", categorie: "Amateur", image: "/yoan.jpeg" },
  { nom: "Massimo Alaimo", categorie: "Amateur", image: "/massimo.jpeg" },
  { nom: "Carlo D'Aleo", categorie: "Amateur", image: "/carlo.jpeg" },
  { nom: "Luigi Donzella", categorie: "Amateur", image: "/marseille.jpeg" }
