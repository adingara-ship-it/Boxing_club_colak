    image: "/mirac.jpeg" 
  },
  {
    nom: "Carmello Pirrello",
    role: "Entraîneur des débutants et récréants",
    description: "Passionné par la transmission des bases du noble art, il accompagne les nouveaux membres et les pratiquants loisirs dans leur apprentissage et leur progression constante.",
    image: "/carmelo.JPG"
  },
  {
    nom: "Ferhat Colak",
    role: "Coach / Soigneur",
    description: "Expert en gestion de coin et en soins immédiats, il assure le suivi physique et la récupération des boxeurs durant les entraînements et les combats.",
    image: "/ferhat.jpeg",
    customPos: "object-position: center top;" // Cadrage spécifique pour éviter de couper la tête
  },
  {
    nom: "Massimo la Bella",
    role: "Coach adjoint / Soigneur",
    description: "Assistant technique indispensable, il épaule les entraîneurs principaux et veille à l'intégrité physique des athlètes sur le ring.",
    image: "/mass.jpeg",
    customPos: "object-position: center 25%;" // Cadrage spécifique ajusté individuellement
  },
  {
    nom: "Pierre Gangai",
    role: "Nutritionniste",
    description: "Spécialiste de la performance par l'alimentation, il optimise les plans nutritionnels des boxeurs pour garantir une énergie maximale et une gestion du poids optimale.",
    image: "/pierre.jpeg"
  }
];

// Données des Boxeurs Professionnels
const boxeursPro = [
  {
    nom: "Benito Muyayi",
    categorie: "Welter Weight",
    palmares: "6-0-0 (4KO's)",
    image: "/beni.jpeg"
  },
  {
    nom: "Antonio D'Urbano",
    categorie: "Superlight Weight",
    palmares: "3-0-0",
    image: "/toni.jpeg"
  },
  {
    nom: "Oguz-han Yilmaz",
    categorie: "Light heavyweight",
    palmares: "1-0-1",
    image: "/zugo.jpeg"
  },
  {
