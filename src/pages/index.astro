---
import BaseLayout from "../layouts/BaseLayout.astro";
import { format } from "date-fns";
import { fr } from "date-fns/locale";

// --- CONFIGURATION AIRTABLE ---
const AIRTABLE_TOKEN = import.meta.env.AIRTABLE_TOKEN;
const BASE_ID = import.meta.env.AIRTABLE_BASE_ID;
const TABLE_NAME = import.meta.env.AIRTABLE_TABLE_NAME;

let annoncesAirtable = [];

try {
  const response = await fetch(
    `https://api.airtable.com/v0/${BASE_ID}/${TABLE_NAME}?sort%5B0%5D%5Bfield%5D=Ordre&sort%5B0%5D%5Bdirection%5D=asc`,
    {
      headers: { Authorization: `Bearer ${AIRTABLE_TOKEN}` },
    }
  );
  const data = await response.json();
  annoncesAirtable =
    data.records?.filter((r) => r.fields.Titre && r.fields.Publié === true) || [];
} catch (e) {
  console.error("Erreur Airtable:", e);
}

const clubName = "BOXING CLUB COLAK";
const city = "La Louvière";
const adresseClub = "Rue de l'Olive 13A, 7100 La Louvière";
const clubEmail = "mirac.colak@outlook.com";
const clubPhone = "0487 11 88 77";

const horaires = [
  { jour: "Lundi", type: "Compétiteurs / Débutant / Récréant", heure: "18h00 – 20h00" },
  { jour: "Mardi", type: "Débutant / Récréant", heure: "18h00 – 20h00" },
  { jour: "Mercredi", type: "Compétiteurs", heure: "18h00 – 20h00" },
  { jour: "Jeudi", type: "Débutant / Récréant", heure: "18h00 – 20h00" },
  { jour: "Vendredi", type: "Compétiteurs", heure: "18h00 – 20h00" },
];

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "SportsClub",
  name: clubName,
  address: {
    "@type": "PostalAddress",
    streetAddress: "Rue de l'Olive 13A",
    addressLocality: "La Louvière",
    addressRegion: "Wallonie",
    postalCode: "7100",
    addressCountry: "BE",
  },
  email: clubEmail,
  telephone: clubPhone,
  url: Astro.site?.href || "https://clubcolak.be",
};

const schema = JSON.stringify(localBusinessSchema);
---

<BaseLayout
  title={`${clubName} — Boxe anglaise à ${city}`}
  description={`Club de boxe anglaise à ${city}. Discipline, encadrement et progression dans un cadre sérieux.`}
  schema={schema}
>
  <section class="hero">
    <div class="hero-decor-line"></div>
    <div class="hero-bg-name">COLAK</div>
    
    <div class="container hero-grid">
      <div class="hero-main">
        <div class="hero-badge reveal">
          <span class="line"></span>
          <span>BOXE ANGLAISE / {city}</span>
        </div>

        <h1 class="hero-title reveal">
          <span>BOXING CLUB</span><br/>
          <span class="text-stroke">COLAK</span>
        </h1>

        <div class="hero-actions reveal">
          <a href="/contact?sujet=essai" class="btn-main">
            SÉANCE D’ESSAI
          </a>
          <a href="#horaires" class="btn-secondary-link">VOIR LE PLANNING</a>
        </div>
      </div>

      <div class="hero-details reveal">
        <div class="manifesto">
          <p>Discipline. Cadre. Exigence.</p>
          <p class="punchline">PAS UN LOISIR. UNE PRATIQUE.</p>
        </div>

        <div class="proof-points">
          <div class="proof">
            <span class="num">01</span>
            <div class="txt"><strong>CADRE</strong><span>Strict & respecté</span></div>
          </div>
          <div class="proof">
            <span class="num">02</span>
            <div class="txt"><strong>COACH</strong><span>Présent & exigeant</span></div>
          </div>
          <div class="proof">
            <span class="num">03</span>
            <div class="txt"><strong>PROGRESSION</strong><span>Suivie & réelle</span></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-intro">
    <div class="container">
      <div class="intro-grid">
        <h2 class="title-premium">Un cadre clair,<br/>des profils motivés</h2>
        <div class="text-premium">
          <p>Débutant complet, pratiquant loisir ou compétiteur : chacun a sa place, à condition de respecter le cadre.</p>
          <p class="bold">Ponctualité, discipline et engagement ne sont pas négociables.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section-news alt" id="news">
    <div class="container">
      <div class="header-flex">
        <h2 class="section-title-small">Actualités</h2>
        <div class="line"></div>
      </div>
      
      <div class="news-grid">
        {
          annoncesAirtable.length > 0 ? (
            annoncesAirtable.map((a) => (
              <article class={`news-card ${a.fields.Urgent ? "is-urgent" : ""}`}>
                {a.fields.Image && a.fields.Image[0] && (
                  <div class="news-img-box">
                    <img src={a.fields.Image[0].url} alt={a.fields.Titre} class="clickable-img" />
                    {a.fields.Urgent && <span class="badge-urgent">URGENT</span>}
                  </div>
                )}
                <div class="news-info">
                  <span class="news-date">{format(new Date(a.createdTime), "dd MMM yyyy", { locale: fr })}</span>
                  <h3>{a.fields.Titre}</h3>
                  <p>{a.fields.Message}</p>
                </div>
              </article>
            ))
          ) : (
            <p class="empty-msg">Aucune annonce pour le moment.</p>
          )
        }
      </div>
    </div>
  </section>

  <section class="section-schedule" id="horaires">
    <div class="container">
      <h2 class="section-title-center">Planning d'entraînement</h2>
      
      <div class="schedule-list">
        {horaires.map((h) => (
          <div class="schedule-item">
            <div class="item-day">{h.jour}</div>
            <div class="item-content">
              <span class="item-type">{h.type}</span>
              <span class="item-time">{h.heure}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-contact alt">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-text">
          <h2 class="title-premium">Nous trouver</h2>
          <address>
            {adresseClub}<br />
            <a href={`tel:${clubPhone.replace(/\s/g, "")}`} class="gold-link">{clubPhone}</a><br />
            <a href={`mailto:${clubEmail}`} class="gold-link">{clubEmail}</a>
          </address>
        </div>
        <div class="contact-map">
          <iframe
            width="100%" height="300" style="border:0; filter: grayscale(1) invert(0.9);"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2543.123456789!2d4.143210!3d50.476543!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTDCsDI4JzM1LjUiTiA0wrAwOCczNS42IkU!5e0!3m2!1sfr!2sbe!4v12345678903"
            allowfullscreen="" loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <div id="custom-lightbox" class="custom-lightbox" style="display: none;">
    <span class="close-lightbox">×</span>
    <img id="lightbox-img" src="" alt="" />
  </div>

  <style>
    /* HERO AFFINÉ */
    .hero {
      min-height: 100vh; display: flex; align-items: center; position: relative;
      background: #000; overflow: hidden; padding: 120px 0 80px;
    }
    .hero-decor-line { position: absolute; left: 5%; top: 0; bottom: 0; width: 1px; background: rgba(199,157,49,0.1); z-index: 1; }
    .hero-bg-name { position: absolute; right: -5vw; bottom: 0; font-family: var(--font-accent); font-size: 24vw; color: rgba(255,255,255,0.02); line-height: 0.8; z-index: 0; }
    
    .hero-grid { display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 60px; position: relative; z-index: 10; }
    .hero-badge { display: flex; align-items: center; gap: 12px; font-family: var(--font-accent); color: var(--color-accent); letter-spacing: 3px; font-size: 0.9rem; margin-bottom: 25px; }
    .hero-badge .line { width: 40px; height: 1px; background: var(--color-accent); }
    
    .hero-title { font-size: clamp(3.5rem, 12vw, 10rem); margin-bottom: 40px; }
    
    .hero-actions { display: flex; align-items: center; gap: 30px; }
    
    /* Bouton plus élégant et moins massif sur mobile */
    .btn-main {
      background: var(--color-accent); color: #000;
      padding: 18px 32px; font-family: var(--font-accent); font-size: 1.2rem;
      letter-spacing: 1px; border: none; cursor: pointer;
    }
    .btn-secondary-link { font-family: var(--font-accent); font-size: 1rem; color: #fff; border-bottom: 1px solid var(--color-accent); padding-bottom: 4px; opacity: 0.8; }

    .hero-details { border-left: 1px solid rgba(255,255,255,0.05); padding-left: 40px; display: flex; flex-direction: column; justify-content: center; }
    .manifesto { margin-bottom: 50px; color: #777; font-size: 1.1rem; }
    .manifesto .punchline { color: #fff; font-family: var(--font-accent); font-size: 1.3rem; margin-top: 10px; letter-spacing: 1px; }

    .proof-points { display: flex; flex-direction: column; gap: 30px; }
    .proof { display: flex; align-items: center; gap: 20px; }
    .num { font-family: var(--font-accent); font-size: 1.4rem; color: var(--color-accent); width: 50px; height: 50px; border: 1px solid var(--color-accent-soft); display: flex; align-items: center; justify-content: center; }
    .txt strong { font-family: var(--font-accent); font-size: 1.2rem; color: #fff; letter-spacing: 1px; }
    .txt span { font-size: 0.8rem; color: #555; text-transform: uppercase; display: block; margin-top: 2px; }

    /* SECTIONS TEXTE */
    .section-intro { padding: 120px 0; }
    .intro-grid { display: grid; grid-template-columns: 1fr 1.2fr; gap: 60px; }
    .title-premium { font-size: clamp(2.2rem, 5vw, 3.5rem); color: #fff; line-height: 1.1; }
    .text-premium { font-size: 1.15rem; color: #888; line-height: 1.7; }
    .text-premium .bold { color: #fff; font-weight: 700; margin-top: 25px; }

    /* ANNONCES CARDS */
    .section-news { padding: 100px 0; background: #080808; }
    .header-flex { display: flex; align-items: center; gap: 20px; margin-bottom: 50px; }
    .section-title-small { font-size: 1.2rem; letter-spacing: 3px; color: var(--color-accent); }
    .header-flex .line { flex-grow: 1; height: 1px; background: rgba(255,255,255,0.05); }

    .news-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; }
    .news-card { background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05); transition: 0.3s; }
    .news-card:hover { border-color: var(--color-accent); transform: translateY(-5px); }
    .news-img-box { height: 200px; position: relative; overflow: hidden; }
    .news-img-box img { width: 100%; height: 100%; object-fit: cover; }
    .badge-urgent { position: absolute; top: 15px; right: 15px; background: var(--color-accent); color: #000; font-family: var(--font-accent); padding: 4px 10px; font-size: 0.8rem; }
    .news-info { padding: 25px; }
    .news-date { color: var(--color-accent); font-family: var(--font-accent); font-size: 0.9rem; margin-bottom: 10px; display: block; }
    .news-info h3 { font-size: 1.4rem; color: #fff; margin-bottom: 12px; }
    .news-info p { color: #888; font-size: 0.95rem; line-height: 1.6; }

    /* PLANNING MOBILE-FRIENDLY */
    .section-schedule { padding: 100px 0; }
    .section-title-center { text-align: center; font-size: 2.5rem; color: #fff; margin-bottom: 60px; }
    .schedule-list { max-width: 800px; margin: 0 auto; display: flex; flex-direction: column; gap: 15px; }
    .schedule-item { 
      display: flex; align-items: center; padding: 25px; 
      background: rgba(255,255,255,0.02); border-left: 3px solid var(--color-accent); 
    }
    .item-day { font-family: var(--font-accent); font-size: 1.8rem; color: var(--color-accent); width: 120px; flex-shrink: 0; }
    .item-content { display: flex; flex-direction: column; gap: 4px; }
    .item-type { color: #fff; font-weight: 600; font-size: 1rem; }
    .item-time { color: #666; font-size: 0.9rem; }

    /* CONTACT & MAP */
    .section-contact { padding: 100px 0; }
    .contact-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 80px; align-items: center; }
    .contact-text address { font-style: normal; color: #888; margin-top: 30px; line-height: 2; font-size: 1.1rem; }
    .gold-link { color: var(--color-accent); font-weight: 700; }
    .contact-map { border: 1px solid rgba(255,255,255,0.05); line-height: 0; border-radius: 4px; overflow: hidden; }

    /* LIGHTBOX */
    .custom-lightbox { position: fixed; inset: 0; background: rgba(0,0,0,0.95); z-index: 3000; display: flex; align-items: center; justify-content: center; }
    .custom-lightbox img { max-width: 90%; max-height: 80vh; border: 1px solid var(--color-accent); }
    .close-lightbox { position: absolute; top: 20px; right: 30px; color: #fff; font-size: 3rem; cursor: pointer; }

    /* RESPONSIVE */
    @media (max-width: 992px) {
      .hero-grid, .intro-grid, .contact-grid { grid-template-columns: 1fr; gap: 50px; }
      .hero-main { padding: 0; }
      .hero-details { border: none; padding: 0; }
      .hero-decor-line, .hero-bg-name { display: none; }
    }
    @media (max-width: 768px) {
      .hero-title { font-size: 3.8rem; }
      .hero-actions { flex-direction: column; align-items: stretch; gap: 20px; }
      .btn-main { text-align: center; }
      .schedule-item { flex-direction: column; align-items: flex-start; gap: 10px; }
      .item-day { width: auto; font-size: 1.5rem; }
    }

    .reveal { opacity: 0; transform: translateY(30px); transition: 1s cubic-bezier(0.16, 1, 0.3, 1); }
    .reveal.is-visible { opacity: 1; transform: translateY(0); }
  </style>

  <script is:inline>
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if(entry.isIntersecting) entry.target.classList.add('is-visible');
      });
    }, { threshold: 0.1 });
    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

    // Lightbox simple
    const lightbox = document.getElementById("custom-lightbox");
    const lightboxImg = document.getElementById("lightbox-img");
    const clickableImgs = document.querySelectorAll(".clickable-img");
    clickableImgs.forEach(img => {
      img.onclick = () => {
        lightboxImg.src = img.src;
        lightbox.style.display = "flex";
        document.body.style.overflow = "hidden";
      }
    });
    document.querySelector(".close-lightbox").onclick = () => {
      lightbox.style.display = "none";
      document.body.style.overflow = "auto";
    }
  </script>
</BaseLayout>